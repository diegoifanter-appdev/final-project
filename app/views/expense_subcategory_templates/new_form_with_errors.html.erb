<!-- Validation failure messages -->
<% if @expense_subcategory.present? %>
  <% if @expense_subcategory.errors.any? %>
    <% @expense_subcategory.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new expense subcategory
</h1>


<hr>

<form action="/create_expense_subcategory" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @expense_subcategory.name %>">
  </div>

  <div class="form-group">
    <label for="category_id">
      Category
    </label>

    <input type="text" id="category_id" name="category_id" class="form-control" value="<%= @expense_subcategory.category_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create expense subcategory
  </button>
</form>

<hr>

<a href="/expense_subcategories">
  Go back
</a>
