<h1>
  Add a new invoice
</h1>


<hr>

<form action="/create_invoice" method="post">

  <div class="form-group">
    <label for="invoice_number">
      Invoice number
    </label>

    <input type="text" id="invoice_number" name="invoice_number" class="form-control">
  </div>

  <div class="form-group">
    <label for="creation_date">
      Creation date
    </label>

    <input type="text" id="creation_date" name="creation_date" class="form-control">
  </div>

  <div class="form-group">
    <label for="work_order_id">
      Work order
    </label>

    <input type="text" id="work_order_id" name="work_order_id" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create invoice
  </button>
</form>

<hr>

<a href="/invoices">
  Go back
</a>
