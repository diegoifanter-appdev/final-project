<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Invoice #<%= @invoice.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/invoices" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/invoices/<%= @invoice.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit invoice
        </a>
      </div>

      <div class="col">
        <a href="/delete_invoice/<%= @invoice.id %>" class="btn btn-block btn-outline-secondary">
          Delete invoice
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Invoice number
      </dt>
      <dd>
        <%= @invoice.invoice_number %>
      </dd>

      <dt>
        Creation date
      </dt>
      <dd>
        <%= @invoice.creation_date %>
      </dd>

      <dt>
        Work order
      </dt>
      <dd>
        <%= @invoice.work_order_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@invoice.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@invoice.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

