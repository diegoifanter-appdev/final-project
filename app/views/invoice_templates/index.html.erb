<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All invoices
    </h1>

    <a href="/invoices/new" class="btn btn-block btn-outline-secondary">
      Add a new invoice
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Invoice number
        </th>

        <th>
          Creation date
        </th>

        <th>
          Work order
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @invoices.each do |invoice| %>
      <tr>
        <td>
          <%= invoice.id %>
        </td>

        <td>
          <%= invoice.invoice_number %>
        </td>

        <td>
          <%= invoice.creation_date %>
        </td>

        <td>
          <%= invoice.work_order_id %>
        </td>

        <td>
          <%= time_ago_in_words(invoice.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(invoice.updated_at) %> ago
        </td>

        <td>
          <a href="/invoices/<%= invoice.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
