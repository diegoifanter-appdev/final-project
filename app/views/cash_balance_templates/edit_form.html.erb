<h1>
  Edit cash balance #<%= @cash_balance.id %>
</h1>

<hr>

<form action="/update_cash_balance/<%= @cash_balance.id %>" method="post">

  <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="text" id="date" name="date" class="form-control" value="<%= @cash_balance.date %>">
  </div>

  <div class="form-group">
    <label for="balance">
      Balance
    </label>

    <input type="text" id="balance" name="balance" class="form-control" value="<%= @cash_balance.balance %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update cash balance
  </button>
</form>

<hr>

<a href="/cash_balances">
  Go back
</a>
