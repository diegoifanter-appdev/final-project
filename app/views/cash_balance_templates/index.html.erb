<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All cash balances
    </h1>

    <a href="/cash_balances/new" class="btn btn-block btn-outline-secondary">
      Add a new cash balance
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Date
        </th>

        <th>
          Balance
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @cash_balances.each do |cash_balance| %>
      <tr>
        <td>
          <%= cash_balance.id %>
        </td>

        <td>
          <%= cash_balance.date %>
        </td>

        <td>
          <%= cash_balance.balance %>
        </td>

        <td>
          <%= time_ago_in_words(cash_balance.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(cash_balance.updated_at) %> ago
        </td>

        <td>
          <a href="/cash_balances/<%= cash_balance.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
