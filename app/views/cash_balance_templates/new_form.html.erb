<h1>
  Add a new cash balance
</h1>


<hr>

<form action="/create_cash_balance" method="post">

  <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="text" id="date" name="date" class="form-control">
  </div>

  <div class="form-group">
    <label for="balance">
      Balance
    </label>

    <input type="text" id="balance" name="balance" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create cash balance
  </button>
</form>

<hr>

<a href="/cash_balances">
  Go back
</a>
