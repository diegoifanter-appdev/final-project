<% if @work_order.errors.any? %>
  <% @work_order.errors.full_messages.each do |message| %>
    <div class="alert alert-danger">
      <%= message %>
    </div>
  <% end %>
<% end %>


<h1>
  Edit work order #<%= @work_order.id %>
</h1>

<hr>

<form action="/update_work_order/<%= @work_order.id %>" method="post">

  <div class="form-group row">
    <label for="work_order_number" class="col-sm-2 col-form-label">
      Work Order #
    </label>
    <div class="col-sm-10">
      <input type="text" id="work_order_number" name="work_order_number" class="form-control" value="<%= WorkOrder.find(@work_order.id).work_order_number %>">
    </div>
  </div>
  
  
  <div class="form-group row">
    <label for="employee_id" class="col-sm-2 col-form-label">
      Employee
    </label>
    <div class="col-sm-10">
      <input type="text" id="employee_id" name="employee_id" class="form-control" value="<%= @work_order.employee_id %>">
    </div>
  </div>

 <div class="form-group row">
    <label for="date_in" class="col-sm-2 col-form-label">
      Date in
    </label>
    <div class="col-sm-10">
      <input type="text" id="date_in" name="date_in" class="form-control" value="<%= @work_order.date_in %>">
    </div>
  </div>

  <div class="form-group row">
    <label for="due_date" class="col-sm-2 col-form-label">
      Due date
    </label>
    <div class="col-sm-10">
      <input type="text" id="due_date" name="due_date" class="form-control" value="<%= @work_order.due_date %>">
    </div>
  </div>

  <div class="form-group row">
    <label for="date_out" class="col-sm-2 col-form-label">
      Date out
    </label>
    <div class="col-sm-10">
      <input type="text" id="date_out" name="date_out" class="form-control" value="<%= @work_order.date_out %>">
    </div>
  </div>

 <div class="form-group row">
    <label for="total_amount" class="col-sm-2 col-form-label">
      Total amount
    </label>
    <div class="col-sm-10">
      <input type="text" id="total_amount" name="total_amount" class="form-control" value="<%= @work_order.total_amount %>">
     </div>
  </div>

  <div class="form-group row">
    <label for="amount_paid" class="col-sm-2 col-form-label">
      Amount paid
    </label>
    <div class="col-sm-10">
      <input type="text" id="amount_paid" name="amount_paid" class="form-control" value="<%= @work_order.amount_paid %>">
    </div>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update work order
  </button>
</form>

<hr>

<a href="/work_orders">
  Go back
</a>
