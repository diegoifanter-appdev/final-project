<!-- Validation failure messages -->
<% if @work_order.present? %>
  <% if @work_order.errors.any? %>
    <% @work_order.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new work order
</h1>


<hr>

<form action="/create_work_order" method="post">

  <div class="form-group">
    <label for="work_order_number">
      Work Order #
    </label>

    <input type="text" id="work_order_number" name="work_order_number" class="form-control" value= <%= @work_order.work_order_number %>>
  </div>

  <div class="form-group">
    <label for="employee_id">
      Assigned Employee
    </label>

    <input type="text" id="employee_id" name="employee_id" class="form-control" value= <%= @work_order.employee_id %>>
  </div>

  <div class="form-group">
    <label for="date_in">
      Date In
    </label>

    <input type="text" id="date_in" name="date_in" class="form-control" value= <%= @work_order.date_in %>>
  </div>

  <div class="form-group">
    <label for="due_date">
      Due Date
    </label>

    <input type="text" id="due_date" name="due_date" class="form-control" value= <%= @work_order.due_date %>>
  </div>

  <div class="form-group">
    <label for="date_out">
      Date Out
    </label>

    <input type="text" id="date_out" name="date_out" class="form-control" value= <%= @work_order.date_out %>>
  </div>
  
   <div class="form-group">
    <label for="total_amount">
      Total amount
    </label>

    <input type="text" id="total_amount" name="total_amount" class="form-control" value= <%= @work_order.total_amount %>>
  </div>

  <div class="form-group">
    <label for="amount_paid">
      Amount Paid
    </label>

    <input type="text" id="amount_paid" name="amount_paid" class="form-control" value= <%= @work_order.amount_paid %>>
  </div>
  
  <button class="btn btn-block btn-outline-secondary">
    Create work order
  </button>
</form>

<hr>

<a href="/work_orders">
  Go back
</a>
