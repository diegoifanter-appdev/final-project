<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Expense category #<%= @expense_category.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/expense_categories" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/expense_categories/<%= @expense_category.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit expense category
        </a>
      </div>

      <div class="col">
        <a href="/delete_expense_category/<%= @expense_category.id %>" class="btn btn-block btn-outline-secondary">
          Delete expense category
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @expense_category.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@expense_category.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@expense_category.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

