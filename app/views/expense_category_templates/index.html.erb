<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All expense categories
    </h1>

    <a href="/expense_categories/new" class="btn btn-block btn-outline-secondary">
      Add a new expense category
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @expense_categories.each do |expense_category| %>
      <tr>
        <td>
          <%= expense_category.id %>
        </td>

        <td>
          <%= expense_category.name %>
        </td>

        <td>
          <%= time_ago_in_words(expense_category.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(expense_category.updated_at) %> ago
        </td>

        <td>
          <a href="/expense_categories/<%= expense_category.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
