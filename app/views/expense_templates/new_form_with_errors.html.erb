<!-- Validation failure messages -->
<% if @expense.present? %>
  <% if @expense.errors.any? %>
    <% @expense.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new expense
</h1>


<hr>

<form action="/create_expense" method="post">

  <div class="form-group">
    <label for="amount">
      Amount
    </label>

    <input type="text" id="amount" name="amount" class="form-control" value="<%= @expense.amount %>">
  </div>

  <div class="form-group">
    <label for="subcategory_id">
      Subcategory
    </label>

    <input type="text" id="subcategory_id" name="subcategory_id" class="form-control" value="<%= @expense.subcategory_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create expense
  </button>
</form>

<hr>

<a href="/expenses">
  Go back
</a>
