<% if @expense.errors.any? %>
  <% @expense.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit expense #<%= @expense.id %>
</h1>

<hr>

<form action="/update_expense/<%= @expense.id %>" method="post">

  <div class="form-group">
    <label for="amount">
      Amount
    </label>

    <input type="text" id="amount" name="amount" class="form-control" value="<%= @expense.amount %>">
  </div>

  <div class="form-group">
    <label for="subcategory_id">
      Subcategory
    </label>

    <input type="text" id="subcategory_id" name="subcategory_id" class="form-control" value="<%= @expense.subcategory_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update expense
  </button>
</form>

<hr>

<a href="/expenses">
  Go back
</a>
